<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.BorderPane?>

<TabPane tabClosingPolicy="UNAVAILABLE" 
    BorderPane.alignment="CENTER"
    id="waren_tabs"
    fx:id="waren_tabs"
    xmlns="http://javafx.com/javafx/8" 
    xmlns:fx="http://javafx.com/fxml/1">
    <tabs>
        <Tab text="Bestand">
            <content>
            <AnchorPane>
            <children>
                <TableView id="bestand_liste" 
                    fx:id="bestand_liste" 
                    editable="true" 
                    tableMenuButtonVisible="true"                    
                    AnchorPane.bottomAnchor="0.0" 
                    AnchorPane.leftAnchor="0.0" 
                    AnchorPane.rightAnchor="0.0" 
                    AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn id="bestand_warennummer" fx:id="bestand_warennummer" text="WN" />
                        <TableColumn id="bestand_bezeichnung" fx:id="bestand_bezeichnung" text="Bezeichnung" />
                        <TableColumn id="bestand_preis" fx:id="bestand_preis" text="Preis" />
                        <TableColumn id="bestand_waehrung" fx:id="bestand_waehrung" text="Währung" />
                        <TableColumn id="bestand_menge" fx:id="bestand_menge" text="Menge" />
                        <TableColumn id="bestand_einheit" fx:id="bestand_einheit" text="Einheit" />
                        <TableColumn id="bestand_kategorie" fx:id="bestand_kategorie" text="Kategorie" />
                    </columns>
                </TableView>
				<Button id="bestand_bestellen" 
	               	fx:id="bestand_bestellen" 
	               	layoutX="733.3" 
	               	layoutY="385.0" 
	               	mnemonicParsing="false" 
	               	prefWidth="120.0" 
	               	text="Bestellen" />
            </children></AnchorPane>
            </content>
        </Tab>
        <Tab text="Bestellungen">
            <content>
            <AnchorPane>
            <children>         
                <TableView id="bestellungen_liste" 
                fx:id="bestellungen_liste" 
                editable="true" 
                tableMenuButtonVisible="true"                           
                AnchorPane.bottomAnchor="0.0" 
                AnchorPane.leftAnchor="0.0" 
                AnchorPane.rightAnchor="0.0" 
                AnchorPane.topAnchor="0.0">
                <columns>
                    <TableColumn id="bestellungen_bestellnummer" fx:id="bestellungen_bestellnummer" text="BN" />
                    <TableColumn id="bestellungen_warennummer" fx:id="bestellungen_warennummer" text="WN" />
                    <TableColumn id="bestellungen_bezeichnung" fx:id="bestellungen_bezeichnung" text="Bezeichnung" />
                    <TableColumn id="bestellungen_preis" fx:id="bestellungen_preis" text="Preis" />
                    <TableColumn id="bestellungen_waehrung" fx:id="bestellungen_waehrung" text="Währung" />
                    <TableColumn id="bestellungen_menge" fx:id="bestellungen_menge" text="Menge" />
                    <TableColumn id="bestellungen_bestelldatum" fx:id="bestellungen_bestelldatum" text="Bestelldatum" />
                    <TableColumn id="bestellungen_lieferdatum" fx:id="bestellungen_lieferdatum" text="Lieferdatum" />
                </columns>
            </TableView>
			<Button id="bestellungen_hinzufuegen" 
               	fx:id="bestellungen_hinzufuegen" 
               	layoutX="733.3" 
               	layoutY="385.0" 
               	mnemonicParsing="false" 
               	prefWidth="120.0" 
               	text="Hinzufügen" />
            </children></AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
